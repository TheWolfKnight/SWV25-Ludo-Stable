
<div class="tile-grid">
  @for (int row = 0; row < Board.Y; row++)
  {
    <div class="grid-row">
      @for (int col = 0; col < Board.X; col++)
      {
        <TileComponent Tile="Board.Tiles[col + 15 * row]" TileRow="@row" TileColumn="@col"
                       GetTile="SetCurrentSelectedTile" />
      }
    </div>
  }
</div>
